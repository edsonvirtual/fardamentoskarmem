                            <label class="small fw-bold text-muted mb-1">Pagamento</label>
                            <select id="payment-method-pos" class="form-select mb-3 shadow-sm py-2 rounded-3 border-light">
                                <option value="Dinheiro">üíµ Dinheiro</option>
                                <option value="Transfer√™ncia">üì± Transfer√™ncia / PIX</option>
                                <option value="Cart√£o">üí≥ Cart√£o de D√©bito/Cr√©dito</option>
                            </select>

                            <label class="small fw-bold text-muted mb-1">Desconto</label>
                            <div class="input-group mb-4 shadow-sm">
                                <select id="discount-type" class="form-select border-light" style="max-width: 80px;" onchange="window.updateCartUI()">
                                    <option value="val">‚Ç¨</option><option value="per">%</option>
                                </select>
                                <input type="number" id="discount-input" class="form-control border-light" value="0" min="0" oninput="window.updateCartUI()">
                            </div>

                            <div id="cart-items" class="mb-4 small border-bottom pb-3 overflow-auto" style="min-height: 100px; max-height: 250px;"></div>
                            
                            <div class="pt-2">
                                <div class="d-flex justify-content-between h3 fw-bold text-primary mt-2"><span>Total</span><span id="cart-total">0,00 ‚Ç¨</span></div>
                                <div class="d-grid gap-2 mt-4">
                                    <button class="btn btn-brand py-3 shadow" id="btn-finish" disabled onclick="window.handleTransaction('sale')">FINALIZAR VENDA</button>
