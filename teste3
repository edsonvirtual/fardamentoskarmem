    <div id="formal-print-area"></div>

    <script>
        const API_URL = 'http://localhost:3000/api';
        let db = { products: [], clients: [], sales: [], quotes: [] };
        let cart = [];
        let isOnline = false;

        // COMUNICA√á√ÉO API
        async function api(path, method = 'GET', body = null) {
            try {
                const options = { method, headers: { 'Content-Type': 'application/json' } };
                if (body) options.body = JSON.stringify(body);
                const res = await fetch(`${API_URL}${path}`, options);
                const text = await res.text();
                let data;
                try { data = text ? JSON.parse(text) : null; } catch (e) { data = text; }
                if (!res.ok) throw new Error(data.error || data.message || `Erro ${res.status}`);
                updateStatus(true);
                return data;
            } catch (e) { updateStatus(false); throw e; }
        }

        function updateStatus(online) {
            const badge = document.getElementById('connection-status');
            isOnline = online;
            badge.innerText = online ? 'LIGADO' : 'OFFLINE';
            badge.className = `status-badge ${online ? 'bg-success text-white shadow-sm' : 'bg-danger text-white animate-pulse'}`;
        }

        async function loadAllData() {
            try {
                const [p, c, q] = await Promise.all([api('/products'), api('/clients'), api('/quotes')]);
                db.products = p || []; db.clients = c || []; db.quotes = q || [];
                window.render();
            } catch (err) { updateStatus(false); }
        }

        window.render = () => {
            const search = document.getElementById('search-pos').value.toLowerCase();
            
            // POS Grid
            document.getElementById('pos-grid').innerHTML = db.products.filter(p => p.name.toLowerCase().includes(search) || p.size.toLowerCase().includes(search)).map(p => `
                <div class="col-md-4">
                    <div class="card card-product border-0 shadow-sm h-100 ${p.stock <= 0 ? 'opacity-50 grayscale' : ''}" onclick="${p.stock > 0 ? `window.addToCart(${p.id})` : ''}">
                        <div class="card-body p-3">
                            <span class="badge bg-primary bg-opacity-10 text-primary mb-2">${p.size}</span>
                            <h6 class="fw-bold text-truncate m-0 text-slate-800">${p.name}</h6>
                            <p class="text-primary fw-bold mt-2 mb-0">${parseFloat(p.price).toFixed(2)} ‚Ç¨</p>
                            <small class="text-muted" style="font-size: 0.7rem;">Stock: ${p.stock} un.</small>
                        </div>
                    </div>
                </div>`).join('');

            // Tabelas T√©cnicas
            document.getElementById('inventory-table').innerHTML = db.products.map(p => `<tr><td><b>${p.name}</b> (${p.size})</td><td>${parseFloat(p.price).toFixed(2)} ‚Ç¨</td><td><span class="badge ${p.stock <= 3 ? 'bg-danger' : 'bg-success'} bg-opacity-10 ${p.stock <= 3 ? 'text-danger' : 'text-success'}">${p.stock}</span></td><td class="text-end"><button onclick="window.editProd(${p.id})" class="btn btn-sm text-warning me-1"><i class="bi bi-pencil-square"></i></button><button onclick="window.deleteDoc('products', ${p.id})" class="btn btn-sm text-danger"><i class="bi bi-trash3"></i></button></td></tr>`).join('');
            document.getElementById('clients-table').innerHTML = db.clients.map(c => `<tr><td><b>${c.name}</b></td><td>${c.phone || '-'}</td><td class="text-end"><button onclick="window.editCli(${c.id})" class="btn btn-sm btn-light border shadow-sm"><i class="bi bi-pencil"></i> Editar</button></td></tr>`).join('');
            
            // Tabela de Or√ßamentos com Novos Bot√µes
            document.getElementById('all-quotes-table').innerHTML = db.quotes.map(q => {
                const total = q.total || q.total_amount || 0;
                const status = q.status || 'Pendente';
                let statusClass = 'bg-secondary';
                if (status === 'Aprovado') statusClass = 'bg-success';
                if (status === 'Recusado') statusClass = 'bg-danger';

                return `
                <tr>
                    <td><span class="fw-bold text-slate-600">ORC-${q.id.toString().split('-').pop()}</span></td>
                    <td><small>${q.date}</small></td>
                    <td>${q.client_name || 'Particular'}</td>
                    <td><b class="text-primary">${parseFloat(total).toFixed(2)} ‚Ç¨</b></td>
                    <td class="text-center">
                        <span class="badge ${statusClass} bg-opacity-10 ${statusClass.replace('bg-', 'text-')}">${status}</span>
                    </td>
                    <td class="text-center">
                        <button onclick="window.printFormalPDF('${q.id}')" class="btn btn-sm btn-outline-primary border-2 px-2" title="Baixar PDF Oficial">
                            <i class="bi bi-file-earmark-pdf"></i>
                        </button>
                    </td>
                    <td class="text-end">
                        <div class="btn-group shadow-sm bg-white rounded-3 overflow-hidden border">
                            <button onclick="window.updateQuoteStatus('${q.id}', 'Aprovado')" class="btn btn-sm btn-light text-success border-0 px-2" title="Aprovar"><i class="bi bi-check-circle"></i></button>
                            <button onclick="window.updateQuoteStatus('${q.id}', 'Recusado')" class="btn btn-sm btn-light text-warning border-0 px-2" title="Recusar"><i class="bi bi-dash-circle"></i></button>
                            <button onclick="window.loadQuoteForEdit('${q.id}')" class="btn btn-sm btn-light text-primary border-0 px-2" title="Editar Itens"><i class="bi bi-pencil"></i></button>
                            <button onclick="window.deleteDoc('quotes', '${q.id}')" class="btn btn-sm btn-light text-danger border-0 px-2" title="Remover"><i class="bi bi-trash3"></i></button>
                        </div>
                    </td>
                </tr>`}).join('');

            const opts = '<option value="">Particular / Consumidor Final</option>' + db.clients.map(c => `<option value="${c.id}">${c.name}</option>`).join('');
            document.getElementById('client-select-pos').innerHTML = opts;
            document.getElementById('report-select-client').innerHTML = '<option value="null">Consultar Vendas Avulsas</option>' + db.clients.map(c => `<option value="${c.id}">${c.name}</option>`).join('');
        }

        window.addToCart = (id) => { 
            const p = db.products.find(x => x.id == id);
            const inCart = cart.find(x => x.id == id);
            if (inCart) inCart.qty++; else cart.push({ ...p, qty: 1, price: parseFloat(p.price) });
            window.updateCartUI(); 
        };

        window.updateCartUI = () => {
            let subtotal = 0;
            const dVal = parseFloat(document.getElementById('discount-input').value) || 0;
            const dType = document.getElementById('discount-type').value;
            document.getElementById('cart-items').innerHTML = cart.map((item, i) => {
                subtotal += item.price * item.qty;
                return `<div class="d-flex justify-content-between align-items-center mb-2 bg-slate-50 p-2 rounded-3 border">
                    <span class="small"><b>${item.qty}x</b> ${item.name}</span>
                    <button onclick="cart.splice(${i},1);window.updateCartUI()" class="btn btn-sm text-danger p-0"><i class="bi bi-x-circle-fill"></i></button>
                </div>`;
            }).join('') || '<p class="text-center py-4 text-slate-300 italic small">Carrinho vazio</p>';
            let discount = (dType === 'per') ? subtotal * (dVal / 100) : dVal;
            document.getElementById('cart-total').innerText = `${Math.max(0, subtotal - discount).toFixed(2)} ‚Ç¨`;
            document.getElementById('btn-finish').disabled = document.getElementById('btn-quote').disabled = cart.length === 0;
        }

        window.handleTransaction = async (type) => {
            if (!isOnline) return alert("Erro: Sem liga√ß√£o ao servidor.");
            const cid = document.getElementById('client-select-pos').value;
            const subtotal = cart.reduce((s, i) => s + (i.price * i.qty), 0);
            const dVal = parseFloat(document.getElementById('discount-input').value) || 0;
            const discount = (document.getElementById('discount-type').value === 'per') ? subtotal * (dVal / 100) : dVal;
            const data = { id: (type==='sale'?'KF-':'ORC-') + Date.now().toString().slice(-5), client_id: cid===""?null:cid, paymentMethod: document.getElementById('payment-method-pos').value, subtotal, discount, total: subtotal - discount, items: cart, status: 'Pendente' };
            try { await api(type==='sale'?'/sales':'/quotes', 'POST', data); alert("Opera√ß√£o efetuada com sucesso!"); cart = []; window.updateCartUI(); loadAllData(); } catch (e) { alert(e.message); }
        }

        window.updateQuoteStatus = async (id, newStatus) => {
            try {
                await api(`/quotes/${id}/status`, 'POST', { status: newStatus });
                loadAllData();
            } catch (e) { alert("Erro ao atualizar estado no servidor. Verifique o seu server.js."); }
        }

        // --- FUN√á√ÉO DE IMPRESS√ÉO PREMIUM ---
        window.printFormalPDF = async (id) => {
            const q = db.quotes.find(x => x.id == id);
            if (!q) return alert("Erro: Proposta n√£o encontrada!");

            const client = db.clients.find(c => String(c.id) === String(q.client_id));
            const clientName = client?.name || q.client_name || 'CLIENTE PARTICULAR';
            const shortId = q.id.toString().split('-').pop();
            const total = parseFloat(q.total || q.total_amount || 0);
            const subtotal = parseFloat(q.subtotal || total);
            const discount = parseFloat(q.discount || 0);

            const pdfContent = `
                <div style="font-family: 'Inter', sans-serif; padding: 25mm 20mm; color: #1e293b; background: #fff; height: 100%; box-sizing: border-box; position: relative;">
                    <div style="position: absolute; top: 0; left: 0; width: 6px; height: 100%; background: #6a0dad;"></div>
                    
                    <div style="text-align: center; margin-bottom: 30px;">
                        <h1 style="font-family: 'Playfair Display', serif; font-weight: 900; font-size: 32px; color: #6a0dad; margin: 0; letter-spacing: -1px; text-transform: uppercase;">Karmem Fardamentos</h1>
                        <p style="margin: 5px 0 0 0; font-size: 11px; text-transform: uppercase; letter-spacing: 4px; color: #94a3b8; font-weight: 700;">Alta Confec√ß√£o Profissional & Atelier</p>
                    </div>

                    <table style="width: 100%; border-collapse: collapse; margin-bottom: 25px; border: 1px solid #1e293b;">
                        <tr>
                            <td style="padding: 10px; border-right: 1px solid #1e293b; width: 40%;">
                                <span style="font-weight: 800; text-transform: uppercase; font-size: 8px; color: #6a0dad; display: block; margin-bottom: 4px;">Informa√ß√µes do Cliente</span>
                                <b style="font-size: 14px; font-family: 'Playfair Display', serif;">${clientName.toUpperCase()}</b>
                                <p style="margin: 2px 0; font-size: 11px; color: #64748b;">Contacto: ${client?.phone || 'N/A'}</p>
                            </td>
                            <td style="padding: 10px; border-right: 1px solid #1e293b; width: 30%;">
                                <span style="font-weight: 800; text-transform: uppercase; font-size: 8px; color: #6a0dad; display: block; margin-bottom: 4px;">Documento</span>
                                <b style="font-size: 12px;">OR√áAMENTO N¬∫ ${shortId}</b>
                                <p style="margin: 2px 0; font-size: 11px; color: #64748b;">Emiss√£o: ${q.date}</p>
                            </td>
                            <td style="padding: 10px; width: 30%;">
                                <span style="font-weight: 800; text-transform: uppercase; font-size: 8px; color: #6a0dad; display: block; margin-bottom: 4px;">Emissor</span>
                                <b style="font-size: 11px;">Karmem Fardamentos, Lda.</b>
                                <p style="margin: 2px 0; font-size: 10px; color: #64748b;">Lisboa, Portugal</p>
                            </td>
                        </tr>
                    </table>

                    <table style="width: 100%; border-collapse: collapse; margin-bottom: 30px;">
                        <thead>
                            <tr style="background: #fcfcfc; border-top: 2px solid #1e293b; border-bottom: 2px solid #1e293b;">
                                <th style="text-align: left; padding: 12px 10px; font-size: 10px; text-transform: uppercase; font-weight: 800;">Descri√ß√£o T√©cnica do Artigo</th>
                                <th style="text-align: center; padding: 12px 10px; font-size: 10px; text-transform: uppercase; width: 60px; font-weight: 800;">Qtd</th>
                                <th style="text-align: right; padding: 12px 10px; font-size: 10px; text-transform: uppercase; width: 100px; font-weight: 800;">P. Unit√°rio</th>
                                <th style="text-align: right; padding: 12px 10px; font-size: 10px; text-transform: uppercase; width: 110px; font-weight: 800;">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            ${(q.items || []).map(i => {
                                const pName = (i.product_name || i.name || "Item").toUpperCase();
                                const price = i.price_unit || i.price || 0;
                                const qty = i.quantity || i.qty || 0;
                                return `<tr>
                                    <td style="padding: 15px 10px; border-bottom: 1px solid #f1f5f9; font-size: 12px;"><b>${pName}</b></td>
                                    <td style="padding: 15px 10px; border-bottom: 1px solid #f1f5f9; text-align: center; font-size: 12px;">${qty}</td>
                                    <td style="padding: 15px 10px; border-bottom: 1px solid #f1f5f9; text-align: right; font-size: 12px;">${parseFloat(price).toFixed(2)} ‚Ç¨</td>
                                    <td style="padding: 15px 10px; border-bottom: 1px solid #f1f5f9; text-align: right; font-size: 12px; font-weight: 700;">${(qty * price).toFixed(2)} ‚Ç¨</td>
                                </tr>`;
                            }).join('')}
                        </tbody>
                    </table>

                    <div style="display: flex; justify-content: space-between; align-items: flex-end; margin-top: auto;">
                        <div style="width: 50%; font-size: 10px; color: #64748b; font-style: italic;">
                            <b style="color: #1e293b; text-transform: uppercase; font-size: 8px; font-style: normal; display: block; margin-bottom: 5px;">Condi√ß√µes Gerais</b>
                            ‚Ä¢ Validade: 7 dias √∫teis.<br>
                            ‚Ä¢ Entrega: Sujeita a disponibilidade de stock ou agenda de confe√ß√£o.<br>
                            ‚Ä¢ Este documento n√£o substitui a fatura fiscal final.<br>
                            ‚Ä¢ Condi√ß√µes: 50% na adjudica√ß√£o e 50% no ato da entrega.
                        </div>
                        <div style="width: 250px; background: #fdfcff; border: 1.5px solid #1e293b; padding: 15px; border-radius: 8px;">
                            <div style="display: flex; justify-content: space-between; margin-bottom: 6px; font-size: 11px;">
                                <span style="font-weight: 700; color: #94a3b8; text-transform: uppercase;">Subtotal Bruto</span>
                                <span>${subtotal.toFixed(2)} ‚Ç¨</span>
                            </div>
                            <div style="display: flex; justify-content: space-between; margin-bottom: 12px; font-size: 11px; color: #dc3545;">
                                <span style="font-weight: 700; text-transform: uppercase;">Benef√≠cio/Desconto</span>
                                <span>- ${discount.toFixed(2)} ‚Ç¨</span>
                            </div>
                            <div style="display: flex; justify-content: space-between; padding-top: 10px; border-top: 1px solid #e2e8f0; font-weight: 900; font-size: 18px; color: #6a0dad; font-family: 'Playfair Display', serif;">
                                <span style="font-size: 11px; align-self: center;">TOTAL</span>
                                <span>${total.toFixed(2)} ‚Ç¨</span>
                            </div>
                        </div>
                    </div>

                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 80px; margin-top: 60px; text-align: center;">
                        <div style="border-top: 1px solid #cbd5e1; padding-top: 8px; font-size: 9px; font-weight: 800; text-transform: uppercase; color: #94a3b8; letter-spacing: 1.5px;">Respons√°vel Karmem</div>
                        <div style="border-top: 1px solid #cbd5e1; padding-top: 8px; font-size: 9px; font-weight: 800; text-transform: uppercase; color: #94a3b8; letter-spacing: 1.5px;">Assinatura do Cliente</div>
                    </div>
                </div>
            `;

            const opt = {
                margin: 0,
                filename: `Proposta_ORC${shortId}.pdf`,
                image: { type: 'jpeg', quality: 1.0 },
                html2canvas: { scale: 3, useCORS: true, letterRendering: true },
                jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait', compress: true }
            };

            try { await html2pdf().set(opt).from(pdfContent).save(); } catch (err) { alert("Falha ao gerar PDF."); }
        };

        window.renderHistory = async (cid) => {
            try {
                const sales = await api(`/sales/client/${cid}`);
                document.getElementById('report-content').innerHTML = `<div class="table-responsive"><table class="table table-sm align-middle"><thead class="x-small text-slate-400 uppercase fw-bold"><tr><th>Ref</th><th>Data</th><th>Estado</th><th class="text-end">Total</th></tr></thead><tbody>${sales.map(s => `<tr><td><span class="fw-bold">#${s.id}</span></td><td>${s.date}</td><td><span class="badge bg-success bg-opacity-10 text-success">${s.status}</span></td><td class="text-end fw-bold text-primary">${parseFloat(s.total_amount || s.total).toFixed(2)} ‚Ç¨</td></tr>`).join('') || '<tr><td colspan="4" class="text-center py-5 text-muted small">Sem registos financeiros para este cliente.</td></tr>'}</tbody></table></div>`;
            } catch(e) {}
        }

        window.editProd = (id) => { const p = db.products.find(x => x.id == id); document.getElementById('p-id').value = p.id; document.getElementById('p-name').value = p.name; document.getElementById('p-size').value = p.size; document.getElementById('p-price').value = p.price; document.getElementById('p-stock').value = p.stock; document.getElementById('form-product').scrollIntoView(); };
        window.editCli = (id) => { const c = db.clients.find(x => x.id == id); document.getElementById('c-id').value = c.id; document.getElementById('c-name').value = c.name; document.getElementById('c-phone').value = c.phone; document.getElementById('form-client').scrollIntoView(); };
        window.deleteDoc = async (col, id) => { if (confirm("Deseja eliminar este registo permanentemente?")) { try { await api(`/${col}/${id}`, 'DELETE'); alert("Registo eliminado!"); loadAllData(); } catch (e) { alert(e.message); } } };
        window.loadQuoteForEdit = (id) => { const q = db.quotes.find(x => x.id == id); if (!q) return; cart = q.items.map(i => ({ id: i.product_id, name: i.product_name || i.name, qty: i.quantity, price: parseFloat(i.price_unit || i.price) })); document.getElementById('client-select-pos').value = q.client_id || ""; document.getElementById('discount-input').value = q.discount || 0; window.updateCartUI(); bootstrap.Tab.getOrCreateInstance(document.querySelector('a[href="#tab-vendas"]')).show(); };

        window.onload = loadAllData;
    </script>
